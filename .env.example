# Third Eye MCP Environment Configuration
# Copy to .env and populate with your actual values

# ============================================================================
# DATABASE
# ============================================================================
# MCP_DB - Database path (optional, defaults to ~/.third-eye-mcp/mcp.db via getDbPath())
# Leave commented to use automatic home directory resolution
# MCP_DB=/custom/path/to/mcp.db
DATABASE_URL=file:~/.third-eye-mcp/mcp.db

# ============================================================================
# SERVER
# ============================================================================
MCP_HOST=127.0.0.1
MCP_PORT=7070
# Legacy clients still respect API_URL; keep in sync with MCP_HOST/MCP_PORT
API_URL=http://127.0.0.1:7070
MCP_ALLOWED_ORIGINS=http://localhost:3300  # Optional comma-separated list; `mcp://` origins allowed automatically

# ============================================================================
# UI
# ============================================================================
MCP_UI_PORT=3300
NEXT_PUBLIC_API_URL=http://127.0.0.1:7070
NEXT_PUBLIC_WS_URL=ws://127.0.0.1:7070
MCP_AUTO_OPEN=true

# ============================================================================
# SECURITY
# ============================================================================
# Required: 64-character hex key for AES-256-GCM encryption
THIRD_EYE_SECURITY_ENCRYPTION_KEY=

# API Key for MCP client authentication
THIRD_EYE_API_KEY=

# Admin password for first-time setup
ADMIN_BOOTSTRAP_PASSWORD=

# ============================================================================
# PROVIDERS
# ============================================================================
# Groq (https://console.groq.com/keys)
GROQ_API_KEY=
GROQ_BASE_URL=https://api.groq.com/openai/v1

# OpenRouter (https://openrouter.ai/keys)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Ollama (local)
OLLAMA_BASE_URL=http://127.0.0.1:11434

# LM Studio (local)
LMSTUDIO_BASE_URL=http://127.0.0.1:1234/v1

# ============================================================================
# PORTAL
# ============================================================================
# Auto-launch browser when session starts
LAUNCH_PORTAL_ON_CONNECT=true
ALLOW_SHELL_OPEN=false

# ============================================================================
# TELEMETRY & OBSERVABILITY
# ============================================================================
# Opt-in telemetry (default: false)
TELEMETRY_ENABLED=false

# Logging
LOG_LEVEL=INFO

# Prometheus metrics (opt-in)
PROMETHEUS_ENABLED=false
METRICS_PORT=9090

# ============================================================================
# RATE LIMITING & BUDGETS
# ============================================================================
RATE_LIMIT_USER_RPS=2
RATE_LIMIT_SESSION_RPS=2
BUDGET_TOKENS_MAX=120000

# ============================================================================
# TENANCY
# ============================================================================
# Mode: single | multi
TENANCY_MODE=single

# Default tenant ID (for single-tenant mode)
DEFAULT_TENANT_ID=default

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Node environment
NODE_ENV=development

# Enable debug logging
DEBUG=false
